<h1>Đăng ký</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "lỗi") %> ngăn cản việc đăng ký:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local: true do |f| %>
<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>
<p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
</p>
<p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
</p>
<p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
</p>
<p>
    <%= f.submit "Đăng ký" %>
</p>
<% end %>